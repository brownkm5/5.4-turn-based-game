<div class="battle-screen">
  <h1>Fight!</h1>
  <div class="col-sm-12">
    <div class="row">

      <div class="col-sm-6">
        <div class="good-guy">
          <div class="">
            <img class='player-image' src="{{combatants.0.picture}}" alt="" />
            <p class='good-name'>{{combatants.0.name}}</p>
            <p class='good-health'>HP: {{combatants.0.health}}/100</p>
            <button type="button" name="button" class='btn btn-default btn-lg attack-button'>Attack</button>
          </div>
        </div>
      </div>

      <div class="col-sm-6">
        <div class="bad-guy">
          <div class="bad">
            <img class="enemy-image" src="{{combatants.1.picture}}" alt=""/>
            <p class='bad-name'>{{combatants.1.name}}</p>
            <p class='bad-health'>{{combatants.1.health}}/100</p>
          </div>
        </div>
      </div>

    </div>

    <div class="col-sm-6">
      <div class="row">
        <div class="message-board">

        </div>
      </div>
    </div>

  </div>

</div>
